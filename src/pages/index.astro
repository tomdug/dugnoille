---
import "../styles/global.css";
import profilePicture from "../assets/profile-picture.jpg";
import { Image } from "astro:assets";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tom Dugnoille</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="flex min-h-screen items-center justify-center bg-gray-50 p-4">
    <div
      class="mx-auto w-full max-w-md rounded-lg bg-white p-8 text-center shadow-lg"
    >
      <div class="mb-8">
        <Image
          src={profilePicture}
          alt="Tom Dugnoille"
          class="mx-auto mb-4 h-32 w-32 rounded-full"
          width={256}
          height={256}
        />
        <h1 class="mb-2 text-3xl font-bold text-gray-900">Tom Dugnoille</h1>
        <p class="text-gray-600">dugnoille.com</p>
      </div>

      <div class="space-y-4">
        <a
          href="mailto:tom@dugnoille.com"
          class="block w-full rounded-lg bg-blue-600 px-6 py-3 font-medium text-white transition-colors duration-200 hover:bg-blue-700"
        >
          Email Me
        </a>

        <a
          href="https://linkedin.com/in/tom-dugnoille"
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full rounded-lg bg-blue-800 px-6 py-3 font-medium text-white transition-colors duration-200 hover:bg-blue-900"
        >
          LinkedIn Profile
        </a>
      </div>
    </div>
  </body>
</html>
