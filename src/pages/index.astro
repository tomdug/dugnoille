---
import { SEO } from "astro-seo";
import { getImage, Image } from "astro:assets";
import profilePictureSrc from "../assets/profile-picture.jpg";
import ButtonLink from "../components/ButtonLink.astro";
import EncodedEmail from "../components/EncodedEmail.astro";
import "../styles/global.css";

const title = "Tom Dugnoille";
const description = "Tom Dugnoille's personal website";

const profilePicture = await getImage({
  src: profilePictureSrc,
  format: "webp",
  width: 800,
  height: 800,
});

const profilePictureUrl = new URL(profilePicture.src, Astro.url).toString();
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <SEO
      title={title}
      description={description}
      twitter={{
        card: "summary_large_image",
        title: title,
        description: description,
        image: profilePictureUrl,
      }}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: profilePictureUrl,
          url: "https://dugnoille.com",
        },
        optional: {
          description: description,
        },
      }}
    />
  </head>
  <body class="flex min-h-screen items-center justify-center bg-gray-50 p-4">
    <div
      class="mx-auto w-full max-w-md rounded-lg bg-white p-8 text-center shadow-lg"
    >
      <div class="mb-8">
        <Image
          src={profilePictureSrc}
          alt="Tom Dugnoille"
          class="mx-auto mb-4 h-32 w-32 rounded-full"
          width={256}
          height={256}
        />
        <h1 class="mb-2 text-3xl font-bold text-gray-900">Tom Dugnoille</h1>
        <EncodedEmail class="text-gray-600" />
      </div>

      <div class="space-y-4">
        <ButtonLink
          href="https://tom.dugnoille.com/call/"
          variant="primary"
          icon="mdi:calendar"
        >
          Book a call with me
        </ButtonLink>

        <ButtonLink
          href="https://linkedin.com/in/tom-dugnoille"
          variant="secondary"
          icon="mdi:linkedin"
        >
          LinkedIn Profile
        </ButtonLink>
      </div>
    </div>
  </body>
</html>
